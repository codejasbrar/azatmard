              } else {
                 $('.wishlist path').css({ fill: "#fff" });
              }
            });
        }, 2000); 
      
      /* Contact Form validation */
      $('#contactSubmit').attr('disabled', 'disabled'); 
      $('#ContactFormEmail').css('border-color', 'red');
      $('#ContactFormMessage').css('border-color', 'red');
      $('#ContactFormName').css('border-color', 'red');
       $('#ContactFormName').keyup(function() { 
        if (!$.trim(this.value)) {
                $('#contactSubmit').attr('disabled', 'disabled'); 
          		$('#ContactFormName').css('border-color', 'red');
            } else {
                if (/^[A-Za-z\s]+$/g.test(this.value)){
                  $('#contactSubmit').removeAttr('disabled'); 
                  $('#ContactFormName').css('border-color', '');
                } else {
                  $('#contactSubmit').attr('disabled', 'disabled'); 
                  $('#ContactFormName').css('border-color', 'red');
                }
            }
        
         if(!$.trim($('#ContactFormMessage').val()) || !$('#ContactFormEmail').val()) {
         	$('#contactSubmit').attr('disabled', 'disabled'); 
         }
         
      });  
      $('#ContactFormEmail').keyup(function() { 
          var email = this.value;
        if (!$.trim(this.value)) {
                $('#contactSubmit').attr('disabled', 'disabled'); 
          		$('#ContactFormEmail').css('border-color', 'red');
            } else {
                validateEmail(email);
            }
      });
      $('#ContactFormPhone').keyup(function(e)                        {
          if (/\D/g.test(this.value)){
            $('#contactSubmit').attr('disabled', 'disabled'); 
          	$('#ContactFormPhone').css('border-color', 'red');
          } else {
            $('#contactSubmit').removeAttr('disabled'); 
            $('#ContactFormPhone').css('border-color', '');
          }
		});
      
      $('#ContactFormMessage').keyup(function() { 
        if (!$.trim(this.value)) {
                $('#contactSubmit').attr('disabled', 'disabled'); 
          		$('#ContactFormMessage').css('border-color', 'red');
            } else {
                $('#contactSubmit').removeAttr('disabled'); 
                $('#ContactFormMessage').css('border-color', '');
            }
        
        if(!$('#ContactFormName').val() || !$('#ContactFormEmail').val()) {
         	$('#contactSubmit').attr('disabled', 'disabled'); 
         }
        
      });      
      
      function validateEmail(email) {
        var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
        if (!emailReg.test(email)) {
          $('#contactSubmit').attr('disabled', 'disabled'); 
          $('#ContactFormEmail').css('border-color', 'red');
        } else {
            $('#contactSubmit').removeAttr('disabled'); 
            $('#ContactFormEmail').css('border-color', '');
        }
        
        if(!$.trim($('#ContactFormMessage').val()) || !$('#ContactFormName').val() || !/^[a-z]+$/g.test(this.value)) {
         	$('#contactSubmit').attr('disabled', 'disabled'); 
         }
        
	  }
      
      /* End */
      
