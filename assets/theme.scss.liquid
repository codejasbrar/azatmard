========================================================================== */

.size-guide-container table {
  width:100%;
  margin-top: 15px;

  @include media-query($medium-up) {
    margin-top: 30px;
  }
}

/* ==========================================================================
# Add to cart option on collection pages
========================================================================== */
.collection-add-to-cart {
  display:none;
}

@media screen and (max-width: 767px){
  .collection-add-to-cart {
    display:block;
  }
  .product-sale-price {
    color: red;
  }
  .product-add-to-basket {
    [type="submit"]{
      margin-left:0%;
    }
  }
  .carousel.carousel-nav.flickity-enabled {
    display: none;
  }


  .featured-images .small-featured-image, .featured-images .large-featured-image {
    padding-left: 2px;
  }
  .small-featured-image {
    margin-bottom: 5%;
  }

}
@media screen and (max-width: 768px){
  .header-currency-select {
    display:none;
  }
}

