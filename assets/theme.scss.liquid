#Button Draw In Effect
========================================================================== */

.btn-draw {
  border: 0px;
  font-family: $title-font;
  font-weight: bold;
  font-size: 10px;
  line-height: 20px;
  letter-spacing: 3px;
  color: #fff;
  text-shadow: 1px 1px 0 rgba(0,0,0,0.5);
  background: transparent;
  padding: 0px;
  position: relative;
  opacity: 1;

  @include media-query ($large-up) {
    font-size: 12px;
    line-height: 19px;
  }

  &:before, &:after {
    content: "";
    width: 100%;
    height: 2px;
    background-color: #fff;
    position: absolute;

    @include media-query($medium-up) {
      width: 10px;
    }
  }

  &:before {
    right: 0;
    top: 0;
    transition-duration: .4s;
  }

  &:after {
    left: 0;
    bottom: 0;
    transition-duration: .4s;
  }

  span {
    width: 100%;
    height: 100%;
    display: block;
    padding: 10px 20px;
    text-shadow: 1px 1px 0 rgba(0,0,0,0.5);

    @include media-query ($large-up) {
      padding: 20px 40px;
    }

    &:before, &:after {
      content: "";
      width: 2px;
      height: 100%;
      position: absolute;
      transition: all 0.2s linear;
      background: #fff;

      @include media-query($medium-up) {
        height: 10px;
      }
    }

    &:before {
      left: 0;
      bottom: 0;
      transition-duration: .4s;
    }

    &:after {
      right: 0;
      top: 0;
      transition-duration: .4s;
    }
  }

  &:hover, &:focus, &:active {
    &:before, &:after {
      width: 100%;
      transition-duration: .4s;
    }

    span {
      &:before, &:after {
        height: 100%;
        transition-duration: .4s;
      }
    }
  }
}
