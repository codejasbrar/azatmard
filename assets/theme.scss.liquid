      @include px-to-rem(16);

      @include media-query($small-up) {
        @include px-to-rem(20);
      }
    }

    &.featured {
      //background-size: cover;
      grid-column: span 12;
      grid-row:1;

      @include media-query($medium-up) {
        grid-column: 1 / span 6;
        grid-row: 1 / span 2;
      }

    }
  }

  .grid-item-container {
    width:100%;
    height:100%;

    @include media-query($small-up) {
      &:hover {

        .grid-item-content {
          &:before, &:after {
            opacity: 1;
          }
        }
      }
    }

    .grid-item-content {
      position:absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      pointer-events: none;

