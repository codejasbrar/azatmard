  justify-content: space-between;

  .thumbnail-wrapper {
    margin-bottom: 10px;
    width: calc(50% - 5px);

    &:nth-child(n + 7) {
      display: none;
    }

    &:hover {
      @include media-query($large-up) {
        cursor: zoom-in;
      }
    }
  }

  /* one item */
  .thumbnail-wrapper:first-child:nth-last-child(1) {
    width: 100%;
  }

  /* two items */
  .thumbnail-wrapper:first-child:nth-last-child(2),
  .thumbnail-wrapper:first-child:nth-last-child(2) ~ .thumbnail-wrapper {
    width: calc(50% - 5px);
  }

  /* three items */
  .thumbnail-wrapper:first-child:nth-last-child(3),
  .thumbnail-wrapper:first-child:nth-last-child(3) ~ .thumbnail-wrapper {
    width: calc(50% - 5px);

    &:nth-child(3n) {
      width: 100%;
    }
  }

  /* four items */
  .thumbnail-wrapper:first-child:nth-last-child(4),
  .thumbnail-wrapper:first-child:nth-last-child(4) ~ .thumbnail-wrapper {
    width: calc(50% - 5px);
  }

  /* five items */
  .thumbnail-wrapper:first-child:nth-last-child(5),
  .thumbnail-wrapper:first-child:nth-last-child(5) ~ .thumbnail-wrapper {
    width: calc(50% - 5px);

    &:nth-child(3n) {
      width: 100%;
    }
  }

  /* six items */
  .thumbnail-wrapper:first-child:nth-last-child(6),
  .thumbnail-wrapper:first-child:nth-last-child(6) ~ .thumbnail-wrapper {
    width: calc(50% - 5px);

    &:nth-child(3n) {
      width: 100%;
    }

    &:nth-child(n + 4) {
      width: calc(33% - 5px);
    }
