                        {% include 'site-logo' %}
                  </div>
			</div>
          
			<div class="col-3 right-header-actions">
				<div class="header-actions justify-content-end">
					
                  	<div class="header-currency-select d-none d-lg-flex">
						<div class="doubly-wrapper">
						</div>
					</div>
                  
					<div class="header-search d-none d-lg-flex">
						{% include 'icon-search' %}
					</div>

					<div class="header-search-icon d-none d-lg-flex">
						{% include 'icon-search' %}
					</div>

					<div class="header-wishlist d-none d-lg-block">
						<a href="/a/wishlist">{% include 'wishlist' %}</a>
					</div>

					<div class="header-account d-none d-lg-block">
						{% include 'my-account-link' %}
					</div><!--header-account -->
				
					<div class="header-basket">
						<a href="/cart">
							<span class="cart-icon">
								{% include 'icon-shopping-bag' %}
								<span class="cart-count {% if cart.item_count == 0 %}no-items{% endif %}">{{ cart.item_count }}</span>
							</span>
						</a>
					</div>
				</div>
			</div><!-- col -->
		</div><!-- row -->
      
      <!--Mobile navigation-->
      <div class="row align-items-center header-row mobile">

			

			
          <div class="col-2 left-header-actions">
				<div class="header-actions justify-content-start">

					<div class="header-currency-select d-none">
						<div class="doubly-wrapper">
						</div>
					</div>

					<div class="header-account d-none">
						{% include 'my-account-link' %}
					</div><!--header-account -->
					
                    <div class="header-nav d-none d-sm-block">
                   
                      <div class="navbar_custom">
    {% for link in linklists['main-menu'].links %}
                        
    {%- assign three_level_nav = false -%}
    {% if link.links != blank %}
      {% if link.levels == 2 %}
        {%- assign three_level_nav = true -%}
      {% endif %}
    {% endif %}
                        
     {% if link.links != blank %}
                        
 		
                        <div class="dropdown_custom">
          <button class="dropbtn">{{ link.title | escape }} 
            <i ><img src="https://cdn.shopify.com/s/files/1/0175/6626/9494/t/11/assets/icon-arrow_down.svg?v=4868913792626623586"></i>
