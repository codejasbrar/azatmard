{% if template == "index" %}
<header id="site-header" role="banner">
{% else %}
<header id="site-header" role="banner" class="InsidePage">
{% endif%}  
	<div class="container-fluid">
		<div class="row align-items-center header-row desktop">

			

			<div class="col-3 text-center logo-wrapper" style="position: static;">
   				<div class="site-navigation-container d-none">
					{% include 'site-navigation' %}
                </div>
              <div class="">
              		{% include 'site-logo' %}
              </div>
			</div><!-- col -->
			
          <div class="col-6 left-header-actions">
				<div class="header-actions justify-content-start">

					<div class="header-currency-select d-none">
						<div class="doubly-wrapper">
						</div>
					</div>

					<div class="header-account d-none">
						{% include 'my-account-link' %}
					</div><!--header-account -->
					
                    <div class="header-nav d-none d-sm-block">
                   
                      <div class="navbar_custom">
    {% for link in linklists['main-menu'].links %}
                        
    {%- assign three_level_nav = false -%}
    {% if link.links != blank %}
      {% if link.levels == 2 %}
        {%- assign three_level_nav = true -%}
      {% endif %}
    {% endif %}
                        
     {% if link.links != blank %}
                        
 		
                        <div class="dropdown_custom">
          <button class="dropbtn">{{ link.title | escape }} 
            <i ><img src="https://cdn.shopify.com/s/files/1/0175/6626/9494/t/11/assets/icon-arrow_down.svg?v=4868913792626623586"></i>
          </button>
          <div class="dropdown_custom-content">
            {% for childlink in link.links %}
            <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
            {% endfor %}
            
          </div>
        </div>
                        
      {% else %}
        
        <a href="{{link.url }}">{{ link.title | escape }}</a>
    
      {% endif %}
                        
     {% endfor %}
  
 
   
</div>

                  
                    </div>
                  
					<div class="header-mobile-menu ml-0 d-block d-sm-none">
						<span class="burger"></span>
                        
                        
