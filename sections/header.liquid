    .desktop{
    	display:none;
    }
    .mobile{
    	display:block;
    }
      .mobile .site-logo{
      	text-align:center;
      }
      
      .mobile .col-8.text-center.logo-wrapper {
	float: left;
}
      .mobile .col-2.left-header-actions {
	float: left;
}
      .mobile .col-2.right-header-actions {
/* 	display: inline-block; */
	float: none;
}
    }

    
