  <style>
    
    .navbar_custom {
  overflow: hidden;
 
}

.navbar_custom a {
  float: left;
  font-size: 16px;
  color: #000;
  text-align: center;
  padding: 14px 32px;
  text-decoration: none;
  padding-left:0px;
}

.dropdown_custom {
  float: left;
  overflow: hidden;
}

.dropdown_custom .dropbtn {
  font-size: 16px;  
  border: none;
  outline: none;
  color: #000;
  padding: 14px 32px;
  background-color: inherit;
  font-family: inherit;
  margin: 0;
  padding-left:0px;
}

.navbar_custom a:hover, .dropdown_custom:hover .dropbtn {
  background-color: #fff;
}

.dropdown_custom-content {
  display: none;
  position: absolute;
  background-color: #fff;
  min-width: 160px;
  z-index: 1;
}

.dropdown_custom-content a {
  float: none;
  color: black;
  padding: 5px 16px;
  text-decoration: none;
  display: block;
  text-align: left;
}

.dropdown_custom-content a:hover {
  background-color: #fff;
}

.dropdown_custom:hover .dropdown_custom-content {
  display: block;
}
    
    .header-nav.d-none.d-sm-block {
    margin-left: 0px;
}
   .site-logo {
   
    text-align: left;
} 
  
   .header-actions {
    
    justify-content: center !important;
}
    .desktop{
    	display:flex;
    }
    .mobile{
    	display:none;
    }
    
