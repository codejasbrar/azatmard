      {% endif %}
                        
     {% endfor %}
  
 
   
</div>

                  
                    </div>
                  
					<div class="header-mobile-menu ml-0 d-block d-sm-none">
						<span class="burger"></span>
                        
                        
					</div>

				  </div>
                  <div class="d-none d-lg-none">
                        {% include 'site-logo' %}
                  </div>
			</div>
        <div class="col-8 text-center logo-wrapper" style="position: static;">
   				<div class="site-navigation-container d-none">
					{% include 'site-navigation' %}
                </div>
              <div class="">
              		{% include 'site-logo' %}
              </div>
			</div><!-- col -->
			
          
			<div class="col-2 right-header-actions">
				<div class="header-actions justify-content-end">
					
                  	<div class="header-currency-select d-none d-lg-flex">
						<div class="doubly-wrapper">
						</div>
					</div>
                  
					<div class="header-search d-none d-lg-flex">
						{% include 'icon-search' %}
					</div>

					<div class="header-search-icon d-none d-lg-flex">
						{% include 'icon-search' %}
					</div>

					<div class="header-wishlist d-none d-lg-block">
						<a href="/a/wishlist">{% include 'wishlist' %}</a>
					</div>

					<div class="header-account d-none d-lg-block">
						{% include 'my-account-link' %}
					</div><!--header-account -->
				
					<div class="header-basket">
						<a href="/cart">
							<span class="cart-icon">
								{% include 'icon-shopping-bag' %}
								<span class="cart-count {% if cart.item_count == 0 %}no-items{% endif %}">{{ cart.item_count }}</span>
							</span>
						</a>
					</div>
				</div>
			</div><!-- col -->
		</div><!-- row -->
		<div class="cart-mini-contents">
			<div class="cart-title">Bag</div>
			<div class="cart-row">
			{% for item in cart.items %}
				<div class="cart-item">
					<div class="cart-item-left">
						<div class="cart-prod-img">
							{% if item.image != blank %}
							<a href="{{ item.url | within: collections.all }}">
								{{ item | img_url: '240x' | img_tag: item.title, 'img-fluid' }}
							</a>
							{% endif %}
						</div>
						<div class="cart-prod-remove">
							<span data-variant-id="{{item.variant_id}}">Remove</span>
						</div>
					</div>
					<div class="cart-item-right">
						<div class="cart-prod-name">
							<a href="{{ item.url }}">{{ item.product.title }}</a>
						</div>
						<div class="cart-prod-variant">
							{% unless item.product.has_only_default_variant %}
							<span>Size : {{ item.variant.title }}</span>
							{% endunless %}
						</div>
						<div class="cart-prod-quantity">
							<span class="label">Quantity : </span><span class="quantity-value">{{ item.quantity}}</span>
						</div>
						<div class="cart-prod-price">
							<span class="money">{{ item.price | money }}</span>
						</div>
					</div>
				</div>
			{% endfor %}
			</div>
			<div class="cart-mini-actions">
				<div class="cart-mini-total">
					<span class="mini-cart-label">Total:</span> <span class="mini-cart-total"><span class="money">{{ cart.total_price | money }}</span></span>
				</div>
				<a href="/cart" class="btn btn-primary">View Bag</a>
				<a href="/checkout" class="btn btn-tertiary">Checkout</a>
			</div>
		</div>
		<div class="search-bar">
			<div class="container">
				<div class="row">
					<div class="col">
						{% include 'search', search_icon: 'false', search_button: 'false' %}
					</div>
				</div>
			</div><!-- container -->
		</div><!-- search-bar -->
	</div><!-- container-fluid -->
</header>
