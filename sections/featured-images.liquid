{% comment %}
This is section that can be moved and placed anywhere on the page.

You will need:
 
- Slick CDN files (found in the layout/theme.liquid)
- Custom Styles (found in styles/sections/featured-products.scss)
<section class="featured-images" data-aos="fade-up">
	<div class="container-fluid{% if template == 'index' %} home-page-feture-images {% endif %}">
		<div class="row">
			<div class="col-6">
				{% for block in section.blocks %}
					{% case block.type %}
					{% when 'small_image' %}
						<div class="small-featured-image">
							<div class="featured-image">
								<a href="{{ block.settings.featured_link }}" title="{{block.settings.featured_title}}">
								{% if block.settings.featured_image != blank %}
								<picture>
									<source media="(max-width: 760px)" srcset="{{ block.settings.featured_image_mobile | img_url: '270x' }}">
									<source media="(max-width: 1440px)" srcset="{{ block.settings.featured_image | img_url: '690x' }}">
									<img src="{{ 'transparent-gif.png' | img_url: '690x537' }}" data-src="{{ block.settings.featured_image | img_url: '690x' }}" class="img-fluid lazyload" alt="{{ block.settings.featured_image.alt }}">
								</picture>
								{% else %}
									{{ 'image' | placeholder_svg_tag: 'hero-placeholder img-fluid' }}
								{% endif %}
								</a>
							</div>
							{% if block.settings.title_show == true %}
							<div class="featured-image-details">
								<a href="{{ block.settings.featured_link }}" title="{{block.settings.featured_title}}">
									<span class="featured-image-title">{{ block.settings.featured_title }}</span>
								</a>
							</div>
							{% endif %}
						</div>
					{% endcase %}
				{% endfor %}
			</div>
			<div class="col-6">
				{% for block in section.blocks %}
					{% case block.type %}
					{% when 'large_image' %}
						<div class="large-featured-image">
							<div class="featured-image">
								<a href="{{ block.settings.large_featured_link }}" title="{{block.settings.large_featured_title}}">
								{% if block.settings.large_featured_image != blank %}
								<picture>
									<source media="(max-width: 760px)" srcset="{{ block.settings.large_featured_image_mobile | img_url: '270x' }}">
									<source media="(max-width: 1440px)" srcset="{{ block.settings.large_featured_image | img_url: '690x' }}">
									<img src="{{ 'transparent-gif.png' | img_url: '690x1074' }}" data-src="{{ block.settings.large_featured_image | img_url: '690x' }}" class="img-fluid lazyload" alt="{{ block.settings.large_featured_image.alt }}">
								</picture>
								{% else %}
									{{ 'image' | placeholder_svg_tag: 'hero-placeholder img-fluid' }}
								{% endif %}
								</a>
							</div>
							{% if block.settings.large_title_show == true %}
							<div class="featured-image-details">
								<a href="{{ block.settings.large_featured_link }}" title="{{block.settings.large_featured_title}}">
									<span class="featured-image-title">{{ block.settings.large_featured_title }}</span>
								</a>
							</div>
							{% endif %}
						</div>
					{% endcase %}
				{% endfor %}
			</div>
		</div>
	</div>
</section>
{% endcomment %}
