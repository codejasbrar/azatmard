{% schema %}
{
  "name": "Featured Images",
  "max_blocks": 3,
	"settings": [
			{
                    "type": 		"text",
                    "id": 			"section_title",
                    "label": 		"Heading",
                    "default": 		"Our Products"
                }
		],
  "blocks": [
		{
			"type": "small_image",
			"name": "Small Image",
			"limit": 2,
			"settings": [
				{
				  "type": "image_picker",
				  "id": "featured_image",
				  "label": "Featured Image",
				  "info": "Optimal image size: 690 x 537."
				},
				{
				  "type": "image_picker",
				  "id": "featured_image_mobile",
				  "label": "Featured Image Mobile",
				  "info": "Optimal image size: 270 x 225."
				},
				{
					"type":     "checkbox",
					"id":       "title_show",
					"label":    "Show Title?",
					"default":  true
				},
				{
				   "type":      "text",
				   "id":        "featured_title", 
				   "label":     "Title",
				   "default":   "Title"
				},
				{
				   "type":      "url",
				   "id":        "featured_link",
				   "label":     "Link"
				}
			]
		},
		{
			"type": "large_image",
			"name": "Large Image",
			"limit": 3,
			"settings": [
				{
				  "type": "image_picker",
				  "id": "large_featured_image",
				  "label": "Featured Image",
				  "info": "Optimal image size: 690 x 1074."
				},
				{
				  "type": "image_picker",
				  "id": "large_featured_image_mobile",
				  "label": "Featured Image Mobile",
				  "info": "Optimal image size: 270 x 450."
				},
				{
					"type":     "checkbox",
					"id":       "large_title_show",
					"label":    "Show Title?",
					"default":  true
				},
				{
				   "type":      "text",
				   "id":        "large_featured_title", 
				   "label":     "Title",
				   "default":   "Title"
				},
				{
				   "type":      "url",
				   "id":        "large_featured_link",
				   "label":     "Link"
				}
			]
		},
		{
			"type": "medium_image",
			"name": "Medium Image",
			"limit": 3,
			"settings": [
				{
				  "type": "image_picker",
				  "id": "medium_featured_image",
				  "label": "Featured Image",
				  "info": "Optimal image size: 413 x 510."
				},
				{
				  "type": "image_picker",
				  "id": "medium_featured_image_mobile",
				  "label": "Featured Image Mobile",
				  "info": "Optimal image size: 270 x 450."
				},
				{
					"type":     "checkbox",
					"id":       "medium_title_show",
					"label":    "Show Title?",
					"default":  true
				},
				{
				   "type":      "text",
				   "id":        "medium_featured_title", 
				   "label":     "Title",
				   "default":   "Title"
				},
				{
				   "type":      "url",
				   "id":        "medium_featured_link",
				   "label":     "Link"
				}
			]
		}
  ],
  "presets": [
    {
      "name": 		"Featured Images",
      "category": 	"Images"
    }
  ]
}
{% endschema %}