<div class="product-additional-sellingpoints">
    <div class="container">
        <div class="row">
{% for block in section.blocks %}
    {% case block.type %}
    {% when 'usp_two' %}
    <div class="col-6 col-lg-3">
    <div class="product-additional-usp">
        <div class="product-additional-usp-icon">
        {% if block.settings.link != blank %}
        <a href="{{block.settings.link}}">
        {% endif %}

            {% include block.settings.icon %}

        {% if block.settings.link != blank %}
        </a>
        {% endif %}
        </div><!-- product-usp-icon -->
        <div class="product-additional-usp-content">
        
            {% if block.settings.link != blank %}
            <a href="{{block.settings.link}}">
            {% endif %}

            <span class="product-additional-usp-title">{{block.settings.title}}</span>

            {% if block.settings.link != blank %}
            </a>
            {% endif %}

        </div><!-- product-usp-content -->
        </div><!-- product-additional-usp -->
    </div><!-- col -->
    {% endcase %}
{% endfor %}
        </div><!-- row -->
    </div><!-- container -->
</div><!-- product-additional-sellingpoints -->