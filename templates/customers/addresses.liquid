<header class="page-header">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-12 mb-3 text-center">
				<a href="/account" class="d-sm-none back-button mb-3">Back</a>
				<h1 class="uppercase">{{ 'customer.addresses.title' | t }}</h1>
			</div>
