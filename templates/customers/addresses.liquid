<div class="container accountpages mt-3 mt-md-5">
{% paginate customer.addresses by 5 %}
<div class="row">
<div class="col-12 col-md-2 text-center text-md-left mt-5 mt-md-0 order-2 order-md-1 d-none d-sm-block">
	<div class="sideNavWrapper">
		<ul>
			{% for link in linklists.account-navigation.links %}
				<li><a href="{{ link.url }}" class="{% if link.active %}active{% endif %}">{{ link.title }}</a></li>
			{% endfor %}
		</ul>
	</div>
</div>

<div class="col-12 col-md-10 order-1 order-md-2">
	<div class="row">
	<div class="col-12">
	{% for address in customer.addresses %}
	<div class="row customer-address">
	<div class="col">

	{% if address == customer.default_address %}
	  <p><strong>{{ 'customer.addresses.default' | t }}</strong></p>
	{% endif %}
	{{ address | format_address }}

	<div class="row">
		<div class="col">
		<div id="EditAddress_{{ address.id }}" class="hide">
			  {% form 'customer_address', address %}
			  <div class="row">
				<div class="col">
					<h4>{{ 'customer.addresses.edit_address' | t }}</h4>
				  </div>
			  </div>
			  <div class="row">
				  <div class="form-group form-full col-12">
					  <label for="AddressFirstName_{{ form.id }}">
						{{ 'customer.addresses.first_name' | t }}
					  </label>

					  <input type="text"
							 name="address[first_name]"
							 id="AddressFirstName_{{ form.id }}"
							 value="{{ form.first_name }}"
							 autocapitalize="words">
				  </div>

				  <div class="form-group form-full col-12">
					  <label for="AddressLastName_{{ form.id }}">
						{{ 'customer.addresses.last_name' | t }}
					  </label>
					  <input type="text"
							 name="address[last_name]"
							 id="AddressLastName_{{ form.id }}"
							 value="{{ form.last_name }}"
							 autocapitalize="words">
				  </div>

				  <div class="form-group form-full col-12">
					  <label for="AddressCompany_{{ form.id }}">
						{{ 'customer.addresses.company' | t }}
					  </label>
					  <input type="text"
							 name="address[company]"
							 id="AddressCompany_{{ form.id }}"
							 value="{{ form.company }}"
							 autocapitalize="words">
				  </div>

				  <div class="form-group form-full col-12">
					  <label for="AddressAddress1_{{ form.id }}">
						{{ 'customer.addresses.address1' | t }}
					  </label>

					  <input type="text"
							 name="address[address1]"
							 id="AddressAddress1_{{ form.id }}"
							 value="{{ form.address1 }}"
							 autocapitalize="words">
				   </div>

				  <div class="form-group form-full col-12">
					  <label for="AddressAddress2_{{ form.id }}">
						{{ 'customer.addresses.address2' | t }}
					  </label>

					  <input type="text"
							 name="address[address2]"
							 id="AddressAddress2_{{ form.id }}"
							 value="{{ form.address2 }}"
							 autocapitalize="words">
				  </div>

				  <div class="form-group form-full col-12">
				  <label for="AddressCity_{{ form.id }}">
					{{ 'customer.addresses.city' | t }}
				  </label>
				  <input type="text"
						 name="address[city]"
						 id="AddressCity_{{ form.id }}"
						 value="{{ form.city }}"
						 autocapitalize="words">
				  </div>

				  <div class="form-group form-full col-12">
					  <label for="AddressCountry_{{ form.id }}">
						{{ 'customer.addresses.country' | t }}
					  </label>

					  <select
						name="address[country]"
						id="AddressCountry_{{ form.id }}"
						class="address-country-option"
						data-form-id="{{ form.id }}"
						data-default="{{ form.country }}">
						{{ country_option_tags }}
					  </select>
				  </div>

				  <div class="form-group form-full col-12">
					  <div id="AddressProvinceContainer_{{ form.id }}" style="display: none">
						<label for="AddressProvince_{{ form.id }}">
						  {{ 'customer.addresses.province' | t }}
						</label>
						<select
						  name="address[province]"
						  id="AddressProvince_{{ form.id }}"
						  data-default="{{ form.province }}">
						</select>
					  </div>
				  </div>

				  <div class="form-group form-full col-12">
					  <label for="AddressZip_{{ form.id }}">
						{{ 'customer.addresses.zip' | t }}
					  </label>
					  <input type="text"
							 name="address[zip]"
							 id="AddressZip_{{ form.id }}"
							 value="{{ form.zip }}"
							 autocapitalize="characters">
				  </div>

				  <div class="form-group form-full col-12">
					  <label for="AddressPhone_{{ form.id }}">
						{{ 'customer.addresses.phone' | t }}
					  </label>
					  <input type="tel"
							 name="address[phone]"
							 id="AddressPhone_{{ form.id }}"
							 value="{{ form.phone }}"
							 pattern="[0-9\-]*">
				  </div>

				  <div class="form-group form-inline col-12">
					  {{ form.set_as_default_checkbox }}
					  <label class="mb-0 ml-4" for="address_default_address_{{ form.id }}">
						{{ 'customer.addresses.set_default' | t }}
					  </label>
				  </div>
			 </div>
		     <div class="row mb-4">
			  	<div class="col-6 text-left">
				  <a href="#" class="address-edit-toggle address-edit-secondary" data-form-id="{{ form.id }}">
					{{ 'customer.addresses.cancel' | t }}
				  </a>
				</div>
				<div class="col-6 text-right">
				  <button type="submit" class="btn btn-primary">{{ 'customer.addresses.update' | t }}</button>
				</div>
			 </div>
			  {% endform %}
					</div><!-- EditAddress -->
				</div><!-- col -->
		</div><!-- row -->
		
		<div class="row mb-4 buttonwrapper">
			<div class="col-6 col-sm-4 col-lg-3 col-xxl-2">
				<button type="button" class="btn btn-primary address-edit-toggle address-edit-primary" data-form-id="{{ address.id }}">
					{{ 'customer.addresses.edit' | t }}
				</button>
			</div>
			<div class="col-6 col-sm-4 col-lg-3 col-xxl-2">
				<button type="button" class="btn btn-primary address-delete" data-form-id="{{ address.id }}" data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}">
					{{ 'customer.addresses.delete' | t }}
				</button>
			</div>
		</div>
		
	</div><!-- col -->
</div><!-- row -->
	{% endfor %}

