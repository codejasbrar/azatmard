<header class="login-register-header image " style="background-image:url('//cdn.shopify.com/s/files/1/0081/4075/0948/files/login-bg-2_1920x.jpg?v=1553608866')">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-12 mb-md-0 col-md-8 col-lg-6 mx-auto text-center">
        <h1>{{ 'customer.reset_password.title' | t }}</h1>
			</div>
		</div><!-- row -->
	</div>
</header>

<div class="form-reset-password">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-8 col-lg-6 mx-auto">
        <div class="rte text-center pt-3 mb-2">
          <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>
        </div><!-- rte -->
			</div><!-- col -->
    </div><!-- row -->

    <div class="row">
      <div class="col-12 col-md-8 col-lg-6 mx-auto">

      {% form 'reset_customer_password' %}
      {{ form.errors | default_errors }}

      <div class="form-group">
        <label for="ResetPassword" class="label-hidden">
          {{ 'customer.reset_password.password' | t }}
        </label>
        <input type="password"
          name="customer[password]"
          id="ResetPassword"
          class="{% if form.errors contains 'password' %}input-error{% endif %}"
          placeholder="{{ 'customer.reset_password.password' | t }}">
      </div><!-- form-group -->

      <div class="form-group">
        <label for="PasswordConfirmation" class="label-hidden">
          {{ 'customer.reset_password.password_confirm' | t }}
        </label>
        <input type="password"
          name="customer[password_confirmation]"
          id="PasswordConfirmation"
          class="{% if form.errors contains 'password_confirmation' %}input-error{% endif %}"
          placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
      </div><!-- form-group -->

      <div class="row align-items-center">
        <div class="col-12 text-center py-3">
          <input type="submit" class="btn btn-primary btn-100" value="{{ 'customer.reset_password.submit' | t }}">
        </div>
      </div>
      
      {% endform %}
  
      </div><!-- col -->
    </div><!-- row -->
  </div><!-- container -->
</div><!--form-reset-password -->
